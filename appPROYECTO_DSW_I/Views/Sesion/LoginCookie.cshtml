@model appPROYECTO_DSW_I.Models.UsuarioModel
<!DOCTYPE html>
<style>
    #contenedor {
        padding: 50px 30px;
        border-radius: 8px;
        box-shadow: -8px 7px 25px 0px rgba(34,153,84,0.97);
        -webkit-box-shadow: -8px 7px 25px 0px rgba(34,153,84,0.97);
        -moz-box-shadow: -8px 7px 25px 0px rgba(34,153,84,0.97);
    }
    .titulo{
        font-size:30px;text-align:center;margin-bottom:30px;
    }
    #error{
        padding:10px 20px;  
    }
    #boton {
        margin-top: 30px;
        background-color: #229954;
        border:none;
    }
    #bttt {
        margin-top: 30px;
    }
</style>
<html>
<head>
    <meta name="Viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" />
</head>

<body>
    <div class="row mt-5">
        <div id="contenedor" class="col-sm-4 offset-sm-4">
            <h1 class="titulo">INICIO DE SESIÓN</h1>
            <form asp-controller="Sesion" asp-action="LoginCookie" method="post">

                <div class="mb-3">
                    <label for="ejemplocorreo" class="col-form-label">Usuario:</label>
                    <input type="email" class="form-control" asp-for="correoUser" />
                </div>
                <div class="mb-3">
                    <label for="ejemploclave" class="col-form-label">Contraseña:</label>
                    <input type="password" class="form-control" asp-for="claveUser" />
                </div>
                <div style="display:flex;width:60%;justify-content:space-between;">
                    <button id="boton" type="submit" class="btn btn-primary">Ingresar</button>
                    <a id="bttt" class="btn btn-primary" asp-area="" asp-controller="Usuario" asp-action="CreateCliente">Registrarse</a>
                </div>
                
                <div id="error">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </form>
        </div>
    </div>
</body>
</html>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>


