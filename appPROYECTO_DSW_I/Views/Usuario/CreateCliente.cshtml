@model appPROYECTO_DSW_I.Models.UsuarioModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Nuevo Cliente</title>
</head>
<body>

    <h1 class="text-center">Registro</h1>
<hr />
<div class="row">
    <div class="col-md-4" style="width:40%;margin:auto;">
        <form asp-action="CreateCliente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="idUser" class="control-label"></label>
                <input asp-for="idUser" class="form-control" />
                <span asp-validation-for="idUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nombreUser" class="control-label"></label>
                <input asp-for="nombreUser" class="form-control" />
                <span asp-validation-for="nombreUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="correoUser" class="control-label"></label>
                <input asp-for="correoUser" class="form-control" />
                <span asp-validation-for="correoUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="claveUser" class="control-label"></label>
                <input asp-for="claveUser" class="form-control" />
                <span asp-validation-for="claveUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="direcUser" class="control-label"></label>
                <input asp-for="direcUser" class="form-control" />
                <span asp-validation-for="direcUser" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:flex;">
                <input type="submit" value="Registrar" class="btn btn-info" style="margin-right:10px;" />
                <a id="bttt" class="btn btn-primary" asp-area="" asp-controller="Sesion" asp-action="LoginCookie">Iniciar Sesion</a>
            </div>
            
        </form>
    </div>
</div>


<div>@ViewBag.mensaje</div>
</body>
</html>
